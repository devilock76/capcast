<p id="notice"><%= notice %></p>

<h1>Listing Episodes</h1>

<%= will_paginate @episodes %>
<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Audio</th>
      <th>Meta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.number.to_s.rjust(4, "0") %></td>
        <td><%= episode.title %></td>
        <td><%= episode.description %></td>
        <td><%= episode.image %></td>
        <td><%= episode.audio %></td>
        <td><%= episode.meta %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @episodes %>

<br>

<%= link_to 'New Episode', new_episode_path %>

